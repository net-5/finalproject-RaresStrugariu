<div class="container">
    <div class="card-group ">

        @foreach (var speaker in Model)
        {

            <div class="card  speaker-container" style="min-width:270px;max-width:270px;">


                @if (speaker.LastName == "Baleanu")
                {
                    <img src="~/images/speakers/codrin.png" asp-append-version="true" class="card-img-top" />

                }

                else if (speaker.Name == "Irina Scurtu")
                {
                    <img src="~/images/speakers/b&w.png" asp-append-version="true" class="card-img-top" />
                }

                else if (speaker.Name == "Victor Chircu")
                {
                    <img src="~/images/speakers/victor-chircu-e1544087591783@2x.png" asp-append-version="true" class="card-img-top" />
                }
                else if (speaker.Name == "Sorin Damian")
                {
                    <img src="~/images/speakers/sorin-damian.png" asp-append-version="true" class="card-img-top" />
                }
                else if (speaker.Name == "Mihaela Ghidersa")
                {
                    <img src="~/images/speakers/Mihaela_Ghidersa@2x.png" asp-append-version="true" class="card-img-top" />
                }
                else if (speaker.Name == "Radu Iscu")
                {
                    <img src="~/images/speakers/iscu.png" asp-append-version="true" class="card-img-top" />
                }
                else if (speaker.Name == "Andrei Mustata")
                {
                    <img src="~/images/speakers/unnamed@2x.png" asp-append-version="true" class="card-img-top" />
                }
                else if (speaker.Name == "Florin Olariu")
                {
                    <img src="~/images/speakers/florin-olariu.png" asp-append-version="true" class="card-img-top" />
                }

                else if (speaker.LastName == "Zaharia")
                {
                    <img src="~/images/speakers/octav-zaharia.png" asp-append-version="true" class="card-img-top" />
                }

                else if (speaker.Name == "Andrei Scutariu")
                {
                    <img src="~/images/speakers/andrei-scutariu.png" asp-append-version="true" class="card-img-top" />

                }


                <div class="card-img-overlay  speaker-text text-white "style="background-color: #371F48;   
                height: 10em;
                margin-top: 346px;
                text-align: center !important;
                line-height:1!important;
                opacity:0.8">

                    <a asp-action="Details" asp-route-id="@speaker.Id" style="text-decoration:none;color:white;">
                        <h4 class="card-title ">@speaker.Name</h4>
                        <p class="card-text">@speaker.Position,@speaker.CompanyName</p>
                    </a>
                    @if (speaker.Twitter != null)
                    {
                        <a href="@speaker.Twitter" class="nav-item nav-link fa fa-twitter" style="font-size:25px;text-decoration:none;color:white;"></a>
                    }
                    @if (speaker.Facebook != null)
                    {
                        <a href="@speaker.Facebook" class="nav-item nav-link fa fa-facebook" style="font-size:25px;text-decoration:none;color:white;"></a>
                    }

                    <a href="@speaker.LinkedIn" class="nav-item nav-link fa fa-linkedin-square" style="font-size:25px;text-decoration:none;color:white;"></a>

                </div>
            </div>



        }

    </div>
</div>

